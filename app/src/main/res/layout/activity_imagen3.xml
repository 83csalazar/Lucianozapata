<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context=".Imagen2">

    <!-- Primer LinearLayout con fondo rojo para el Botón de Cierre (Salir) -->
    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="#6E645B"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!-- Botón de Cierre (Salir) -->
        <ImageButton
            android:id="@+id/buttonSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:src="@drawable/campanaencendida" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="141dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDulceAnhelatte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DulceAnhelatte"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingedientes"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="433dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 1"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 2"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 3"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 4"
            android:textSize="18sp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 5"
            android:textSize="18sp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediente 6"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Puedes agregar más TextView para más ingredientes según sea necesario -->

    </LinearLayout>


    <!-- Layout para botones ordenados en la parte inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- EditText con título -->

        <!-- ImageButton 1 con título -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Botón 1 con título -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewImageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Botón 1"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btntrash" />

            </LinearLayout>

            <!-- Botón 2 con título -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewImageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Botón 2"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btnagregar" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewImageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Botón 3"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btnagregar"
                    tools:srcCompat="@drawable/btneditar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewImageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Botón 3"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btnagregar"
                    tools:srcCompat="@drawable/btneditar" />

            </LinearLayout>

        </LinearLayout>


        <!-- Cuarto LinearLayout con fondo anaranjado para la última fila de botones -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthLayout"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_marginTop="-17dp"
        android:background="#E67A00"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- ImageButton 3 con título -->
        <TextView
            android:id="@+id/textViewImageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botón 3"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Contenido de la última fila de botones -->
        <ImageButton
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/btnhome" />
    </LinearLayout>